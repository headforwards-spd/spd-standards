{
  "name": "root",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lerna-bootstrap": "lerna bootstrap",
    "lerna-publish": "lerna publish from-git",
    "lint": "run-p lint:**",
    "lint:javascript": "eslint --fix '**/*.js'",
    "lint:markdown": "prettier --loglevel warn --write '**/*.md'"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ]
    }
  },
  "lint-staged": {
    "package.json": "sort-package-json",
    "**/*.js": "eslint --fix --quiet",
    "**/*.md": "prettier --loglevel silent --write"
  },
  "devDependencies": {
    "@headforwards-spd/eslint-config-spd": ">0.0.1",
    "@headforwards-spd/prettier-config-spd": ">0.0.1",
    "husky": "4",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "sort-package-json": "^1.49.0"
  }
}
