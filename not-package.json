{
  "name": "spd-code-style-linting",
  "description": "SPD Code Style & Linting",
  "repository": "git@github.com:headforwards-spd/spd-code-style-linting.git",
  "files": [
    ".eslintrc.js",
    ".prettierrc.js",
    ".stylelintrc.js"
  ],
  "scripts": {
    "lint:configs": "eslint --fix -c src/.eslintrc.js 'src/.eslintrc*'",
    "lint:javascript": "eslint -c src/.eslintrc-js.js 'src/**/*.js'",
    "lint:typescript": "eslint -c src/.eslintrc-ts.js 'src/**/*.ts'"
  },
  "dependencies": {
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sonarjs": "^0.6.0",
    "gts": "^3.1.0",
    "stylelint": "^13.10.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-prettier": "^1.1.2"
  },
  "peerDependencies": {
    "eslint": ">=5.0.0",
    "prettier": ">=0.11.0",
    "typescript": ">=3"
  }
}
